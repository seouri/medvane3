<h1><%= link_to(h(@bibliome.query), bibliome_path(@bibliome)) %></h1>
<h2>Authors</h2>
<%= page_entries_info @authors %>
<ol>
<% @authors.each do |a| -%>
  <li><%= link_to(a.author.full_name, bibliome_author_path(@bibliome, a.author)) %> <span class="count">(<%= a.all %>)</span></li>
<% end -%>
</ol>
<%= will_paginate @authors %>